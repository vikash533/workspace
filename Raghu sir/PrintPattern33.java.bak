import java.util.Scanner;
class PrintPattern33
{
	public static void main(String[] args) 
	{
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter the value of n");
		int n=sc.nextInt();
		for (int i=1;i<=n ;i++ )
		{
			for (int j=1;j<=n-1 ;j++ )
			{
               System.out.print(" ");
			}
             for (int j=1;j<=i ;j++ )
            {
               System.out.print("*");
            }
			System.out.println();
		}
		
	}
}
